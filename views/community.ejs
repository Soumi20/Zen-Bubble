<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

    <!-- FA CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.2/css/all.css" rel="stylesheet">

    <!-- Favicon -->
    <link rel="shortcut icon" href="img/favicon.png" type="image/png">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/c-styles.css">
    <link rel="stylesheet" href="css/modal_form.css">
    <link rel="stylesheet" href="css/toast.css">

    <!-- Title of Page -->
    <title>Zen Bubble</title>
  </head>

  
  <body>
    <%- include('modal_form') %>
    <%- include('toast') %>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-light fixed-top" style="background-color: #C2F1B5 !important;">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="img/logo-nobg.png" width="170" background= "white" text-indent= "-99999px" style="margin-left: 3%;">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item nav-item-active">
              <a class="nav-link" aria-current="page" href="/community">Community Help</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/journal">Journal</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="home.html">Meditate</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/leaderboard">Leaderboard</a>
            </li>

            <% if(!currentUser){ %>
              <li class="nav-item">
              <a id="modal_btn" class="nav-link btn-get-quote text-white" href="#login">Login</a>
              </li>
            <% } else { %>
              <li class="nav-item">
              <a class="nav-link " href="/logout">Logout</a>
              </li>
            <% } %>      
              
                <li class="nav-item" style="background-color: #C2F1B5 !important; margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important;">
                  <% if(currentUser){ %>
                    <a class="nav-link" aria-current="page" href="/profile" style="margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important;"><i class="fas fa-user-circle" style="font-size: 36px; margin-top: 0 !important; margin-bottom: 0 !important; padding-top: 0 !important; padding-bottom: 0 !important; color: #5DB274;"></i></a>
                  <% } %>
                </li>
          </ul>
        </div>
      </div>
    </nav>


    <!-- Text input -->
    <form class="txt-input" action="/community" method="POST">
      <h2>Zen Bubble Heart to Heart Talks!</h2>
      <div class="form-group">
        <div class="col-sm-10 col-md-9 col-lg-7">
          <label for="exampleFormControlTextarea1">Tell Us How You are Feeling Today...</label>
          <textarea type="text" class="form-control" name="emotiontxt" rows="5" style="resize: none;" placeholder="Please write as long or as short as you want, we will try to find a way to help." required></textarea>
          <button class="btn btn-primary emt-btn" type="submit" name="button">Submit</button>
        </div>
      </div>     
    </form>

    <div class="container">
      <div class="row">
        <div class="col-12">
          <p class="dum"><%= result %></p>
        </div>
        <div class="col-10 col-md-5 col-lg-4">
          <button class="btn btn-primary convo-btn" onclick="openchat()" type="submit" name="convo-btn" style="display: none; margin-top: 10%;">Explore!</button>
          <button class="btn btn-primary feel-btn" onclick="feelbox()" type="submit" name="feel-btn" style="display: none; margin-top: 10%;">Feeling Different Now.</button>     
          <!--<button class="btn btn-primary trigger-push" style="display: none;">Trigger Push Notification</button>-->
        </div>
      </div>
    </div>
    
    <div class="container chat-container" style="display: none;">
      <div class="row">
        <ul id="messages"></ul>
          <form id="form" action="">
            <input id="input" autocomplete="off" /><button>Send</button>
          </form>
      </div>
    </div>

    <!-- Footer -->
    <footer class="com-foot" style="position: fixed; bottom: 0; right: 0; left: 0; z-index: 1000;">
      <div class="container">
        <div class="row">
          <div class="col-md-3 footer-left">
            <p>
              <img src="img/favicon.png" style="width: 55px;">  <span style="color: #1e7c37;">Made with <i class="fas fa-heart"></i> by Zen Bubble</span>
            </p>        
          </div>
          <div class="col-md-3 offset-md-1 footer-right">
            <a href="https://github.com/Swatilekha-Roy/Zen-Bubble"><i class="fab fa-github"></i></a>
						<a href="mailto:swatilekha.roy4@gmail.com" ><i class="fa fa-envelope"></i></a>
          </div>
        </div>
      </div>
    </footer>
    
    <!-- Scroll to top arrow -->
    <a href="javascript:" id="return-to-top"><i class="fa fa-angle-up" aria-hidden="true" style="font-size: 30px;"></i></a>

    <!-- JQuery JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js" integrity="sha512-n/4gHW3atM3QqRcbCn6ewmpxcLAHGaDjpEBu4xZd47N0W2oQ+6q7oc3PXstrJYXcbNU1OHdQ1T7pAP+gi5Yu8g==" crossorigin="anonymous"></script>

    <!-- Socket.io scripts -->
    <script src="/socket.io/socket.io.js"></script>
    
    <!-- Custom scripts -->
    <script type="text/javascript" src="js/scripts.js"></script>
    <script type="text/javascript" src="js/community.js"></script>
    <script type="text/javascript" src="js/wow.min.js"></script>
    <script  type="text/javascript" src="push.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>

    <!-- WOW script -->
    <script type="text/javascript">
      new WOW().init();
    </script>

  </body>
</html>